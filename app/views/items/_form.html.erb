<%= form_for @item do |f| %>
  <%= f.text_field :name, placeholder: 'Name' %>
  <%= f.text_field :description, placeholder: 'Description' %>
  <%= f.number_field :price, placeholder: 'Price', min: 0, step: 0.01 %>
  <%= f.number_field :bill_id, placeholder: 'Bill id' %>
  <%= f.submit 'Submit' %>
<% end %> 
