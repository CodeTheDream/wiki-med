<main role="main">
  <div class="container border border-secondary rounded-lg mt-3">
    <h1 class="text-center">
        Bills
    </h1>
  </div>

<h4 class="text-center p-2">Search</h4>

<%= link_to  "Input Detailed Billing Information", new_bill_path, class:'btn btn-primary btn-sm btn-block' %>

<%= link_to  "Input Quick Billing Information", quick_new_bills_url, class:'btn btn-primary btn-sm btn-block' %>


<% @bills.each do |f|%>
    <div>
      <%= f.facility.name %> <%= f.date %> <%= f.procedure.name %> <%= f.price %>
      <div>
        <% f.items.each do |item| %>
          <%= item.name %>
          <%= item.price %>
        <% end %>
      </div>
    </div>
<%end%>
</main>
