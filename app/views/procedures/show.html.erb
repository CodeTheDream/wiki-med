<div class="container border border-secondary rounded-lg mt-3">
  <h1 class="text-center">
    <%= @procedure.name.titleize %>
  </h1>
</div>
  
<div class="album py-5 bg-light">
  <div class="container">
     <div class="row">
      <%= @procedure.bills.each do |bill|%>
      <div class="col-md-3">
        <div class="card mb-3">
          <div class="card-header text-center">
            <h5><%=bill.facility.name%></h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-4 text-left">Total:</div>
              <div class="col-8 text-right">$<%= bill.price.round(2) %></div>
            </div>
          </div>
          <div class="card footer justify-content-center">
            <div class="btn-group">
              <%= link_to "View Bill", bill_path(bill), class:"btn btn-sm btn-outline-primary"%>
            </div>
          </div>
          
        </div>
      </div>
      <%end%>
    </div>
  </div>
</div>